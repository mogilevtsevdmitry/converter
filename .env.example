# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5455/converter?sslmode=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5

# Temporal
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=video-conversion

# S3
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_OUTPUT=converted
S3_USE_SSL=false

# Worker
WORKDIR_ROOT=/work
MAX_PARALLEL_JOBS=2
MAX_PARALLEL_FFMPEG=4
MAX_PARALLEL_UPLOADS=10
ENABLE_GPU=false

# FFmpeg
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
FFMPEG_PROCESS_TIMEOUT=6h

# API
API_PORT=8080
API_READ_TIMEOUT=30s
API_WRITE_TIMEOUT=30s

# Thumbnails
THUMB_MAX_FRAMES=200

# HLS
HLS_SEGMENT_DURATION_SEC=4
HLS_ENABLE_ENCRYPTION=false
HLS_KEY_URL=

# Retry
RETRY_COUNT=3
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
